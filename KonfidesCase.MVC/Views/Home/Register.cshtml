@model KonfidesCase.MVC.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Register";
}

<h1>Kayıt Ol</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <abbr title="Mail adresi türkçe karakter bulundurmamalıdır ve küçük harf girilmelidir!"><label asp-for="Email" class="control-label"></label></abbr>
                <input asp-for="Email" class="form-control" placeholder="email@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <abbr title="Şifre en az 6 karakterden oluşmalıdır ve en az birer karakter büyük-küçük harf, rakam ve sembol olmalıdır!"><label asp-for="Password" class="control-label"></label></abbr>
                <input id="txtPass" class="form-control" type="password" asp-for="Password" placeholder="Exam.1" />
                <input type="checkbox" name="mycheckbox" id="ckShowPass" onclick="myshowp(this)"/>
                <label class="font-monospace">Şifreyi Göster</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kayıt Ol" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>
<div>
    <a class="link-dark" asp-action="Login">Giriş ekranına geri dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function myshowp(e) {
            txtBox = $('#txtPass')
            if (e.checked) {
                txtBox.attr("Type", "Text");
            }
            else {
                txtBox.attr("Type", "Password");
            }
        }
    </script>
}