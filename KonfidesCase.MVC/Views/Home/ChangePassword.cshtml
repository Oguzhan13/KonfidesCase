@model KonfidesCase.ViewModel.ChangePasswordVM

@{
    ViewData["Title"] = "ChangePassword";
}

<h1>Şifre Değiştir</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CurrentPassword" class="control-label"></label>
                <input id="txtPass" class="form-control" type="password" asp-for="CurrentPassword" />
                <input type="checkbox" name="mycheckbox" id="ckShowPass" onclick="myshowp(this)" />
                <label>Şifreyi Göster</label>
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input id="txtPass" class="form-control" type="password" asp-for="NewPassword" />
                <input type="checkbox" name="mycheckbox" id="ckShowPass" onclick="myshowp(this)" />
                <label>Şifreyi Göster</label>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Şifre Değiştir" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Ana ekrana geri dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function myshowp(e) {
            txtBox = $('#txtPass')
            if (e.checked) {
                txtBox.attr("Type", "Text");
            }
            else {
                txtBox.attr("Type", "Password");
            }
        }
    </script>
}