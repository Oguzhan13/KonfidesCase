@using KonfidesCase.MVC.Areas.Admin.Models;
@model KonfidesCase.MVC.Models.DataResult<Category>

<h1>Kategori Oluştur</h1>
@if (string.IsNullOrEmpty(Model.Message))
{
    <h4></h4>
}
else
{
    <h4>@Model.Message</h4>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Data!.Id" class="control-label"></label>
                <input asp-for="Data!.Id" class="form-control" />
                <span asp-validation-for="Data!.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data!.Name" class="control-label"></label>
                <input asp-for="Data!.Name" class="form-control" />
                <span asp-validation-for="Data!.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
